<h1><%= @workspace.title %></h1>

<div class="row">
    <div class="col-md-8">
        <p><%= @workspace.description %></p>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_workspace_path(@workspace), class: 'btn btn-success' %>
        <%= link_to "Delete Workspace", @workspace, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this workspace?'} %>
    </div>
</div>